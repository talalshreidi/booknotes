<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Book</title>
    <link rel="stylesheet" href="/header.css">
    <link rel="stylesheet" href="/edit.css">
</head>
<body>
    <%- include('partials/header.ejs') %>
    <form class="edit-form" action="/books/<%= book.id %>?_method=PUT" method="POST">
        <h1>Edit Book</h1>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= book.title %>" required>

        <label for="author">Author:</label>
        <input type="text" id="author" name="author" value="<%= book.author %>" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= book.description %></textarea>

        <label for="olid">Open Library ID:</label>
        <input type="text" id="olid" name="olid" value="<%= book.olid %>" required>

        <div class="edit-form-buttons">
            <button type="submit">Save Changes</button>
            <button type="button" onclick="window.location.href='/books/<%= book.id %>'">Cancel</button>
        </div>
    </form>
</body>
</html>
